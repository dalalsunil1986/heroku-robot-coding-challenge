
<h1> All Robots</h1>

<%= form_tag("/robots/search", method: "get") do %>
  <p><%= label_tag(:q, "Search Robots by Name:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %></p>
<% end %>


<ul>
  <% @robots.each do |robot| %>
    <li>
      <%= link_to robot.name, robot_path(robot.id) %>
    </li>
    <br>
  <% end %>
</ul>
